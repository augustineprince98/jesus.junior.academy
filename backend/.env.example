# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/school_db

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# File Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# SMS Provider - Twilio (optional)
# Sign up at https://www.twilio.com/ to get credentials
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Web Push Notifications - VAPID (optional)
# Generate keys using: python -c "from pywebpush import webpush; from py_vapid import Vapid; v = Vapid(); v.generate_keys(); print(f'Public: {v.public_key}\\nPrivate: {v.private_key}')"
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_CLAIMS_EMAIL=admin@jesusjunioracademy.com

# Environment
ENV=development
DEBUG=true
